$('#candles .candle').tooltip({
  effect: 'slide',
  offset: [20, 0],
  delay: 500,
  relative: true,
  events: {
    def: 'click mouseenter, mouseleave'
  },
  onHide: function(e) {
    this.getTip().find('form').hide();
  }
}).dynamic();

$('.tooltip a.edit').click(function(e) {
  e.preventDefault();
  $(this).next().show();
});